---
interface Testimonial {
  content: string;
  author: string;
  role: string;
  company: string;
  avatar: string;
}

const testimonials: Testimonial[] = [
  {
    content: "Sohum is a dedicated, enthusiastic, and helpful worker and has been a great asset to our team. He is very kind and patient when working with users, and is diligent in completing any task that is requested of him. He learns new concepts quickly and has helped tremendously with various support issues and maintenance of library computers. He is a joy to work with!",
    author: "Deirdre Kirmis",
    role: "Systems Architect",
    company: "Arizona State University",
    avatar: "https://media.licdn.com/dms/image/v2/C5603AQFoln6wc1Ed6A/profile-displayphoto-shrink_100_100/profile-displayphoto-shrink_100_100/0/1517027944742?e=1748476800&v=beta&t=ucGI-WeS6Q8q2ot5rejpmarGhznCEW8QzWWZSt0qy3g"
  },
  {
    content: "Sohum demonstrates a strong work ethic, attention to detail, and a proactive approach in his tasks. His contributions were valuable to the ongoing research in our lab, and he effectively collaborated with team members and utilized various tools and platforms to achieve the project objectives.",
    author: "Dr. Xuesong(Simon) Zhou",
    role: "Professor, Researcher",
    company: "Transportation and AI Lab at Arizona State University",
    avatar: "https://webapp4.asu.edu/photo-ws/directory_photo/xzhou74?size=medium&break=1742886586&blankImage2=1"
  }
];
---

<div class="bg-white/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
  <h3 class="text-2xl font-semibold text-blue-900 mb-6">What People Say</h3>
  <div class="grid md:grid-cols-2 gap-6">
    {testimonials.map((testimonial) => (
      <div class="bg-gradient-to-br from-blue-50 to-white p-6 rounded-2xl">
        <div class="flex gap-4 items-start">
          <img 
            src={testimonial.avatar} 
            alt={testimonial.author}
            class="w-12 h-12 rounded-full object-cover"
          />
          <div class="flex-1">
            <p class="text-blue-600/90 mb-4">{testimonial.content}</p>
            <div>
              <p class="font-medium text-blue-900">{testimonial.author}</p>
              <p class="text-sm text-blue-600">
                {testimonial.role} at {testimonial.company}
              </p>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>
