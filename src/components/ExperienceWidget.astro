---
interface Experience {
  title: string;
  company: string;
  period: string;
  description: string[];
  technologies: string[];
}

interface Education {
  degree: string;
  school: string;
  period: string;
  achievements: string[];
}

const experiences: Experience[] = [
  {
    title: "Operations and MarTech Expert",
    company: "Moxie Pest Control",
    period: "2024 - Present",
    description: [
      "Spearheaded the implementation of innovative ideas across the company",
      "Designed and developed API workflows to automate acquisition and termination processes for over 10,000 employees",
      "Built and integrated an in-house data server in Microsoft Fabric from multiple sources, driving data analysis that increased revenue by $500,000+",
      "Developed an automated appointment scheduler in Microsoft Power Apps with unique path and time suggestion algorithms",
      "Automated in-office sheets, documents, and notes using AI, cutting labor by 20% and boosting productivity by 60%"
    ],
    technologies: ["Python", "Postman", "Google Apps Scripts", "Microsoft Fabric"]
  },
  {
    title: "Information Technology Solutions Specialist",
    company: "Arizona State University",
    period: "2021 - 2023",
    description: [
      "Organized inventory and tracked purchases of over 10,000 total assets in the AWS/IBM hybrid cloud environment while leveraging Watson for analysis and recommendations",
      "Imaged approximately 100 computers with university BIOS settings using Rufus and created an automated process, reducing workload by about 25 hours per week",
      "Managed and resolved over 100 issues in the university ticketing system, utilizing SLA and multi-tier formatting"
    ],
    technologies: ["Rufus", "Active Directory", "AWS","Microsoft Office Suite"]
  },
  {
    title: "Research Assistant",
    company: "ASU Transportation+AI Lab",
    period: "2022 - 2023",
    description: [
      "Created over 10 distinct algorithms to address traffic flow and analysis for the cities of Bullhead and Tempe",
      "Partnered closely with the Arizona State Government to expand a self-developed, open-source solution statewide, deploying it in over 50,000 traffic-congested areas",
      "Built a cloud-based system for small cities and rural communities to meet multimodal network assessment needs, emphasizing accessibility and equity through tools like Synchro 11, QGIS, keplergl, and osm2gmns",
      "Acted as a core developer for the ASU AI Lab GitHub repository and led software deployment training, producing multiple YouTube videos on Artificial Intelligence, Python programming, and research topics"
    ],
    technologies: ["Synchro 11", "KeplerGL", "OSM2GMNS", "YouTube", "Python", "Google Colab"]
  },
  {
    title: "Founder",
    company: "Tech Reboot",
    period: "2021 - 2024",
    description: [
      "Estabilished and operated a hardware tech reselling company from 2022-2023, specializing in the repair and sale of printers, Macs, and other tech equipment sourced from government auctions and various marketplaces",
      "Managed the acquisition, refurbishment, and resale of diverse hardware, achieving a total revenue of approximately $20,000 before exiting the business",
      "Developed and implemented efficient repair processes for printers and Macs, ensuring high-quality standards and customer satisfaction"
    ],
    technologies: ["Refract", "Microsoft Office Suite", "Facebook/Google Ads"]
  }
];

const education: Education[] = [
  {
    degree: "Bachelor of Science in Computer Science",
    school: "Arizona State University",
    period: "2021 - 2024",
    achievements: [
      "Graduated Early with Summa Cum Laude Honors",
      "Held notable positions in SASE, EPICS, FURI, the ASU AI Lab and many other organizations",
      "Developed Tech Systems at ASU currently used by over 60,000 students and staff members",
      "Exited 2 startups with a total valuation of $50,000+"
    ]
  }
];
---

<div class="space-y-8">
  <div class="bg-white/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
    <h3 class="text-2xl font-semibold mb-6">Work Experience</h3>
    <div class="space-y-6">
      {experiences.map((exp) => (
        <div class="border-l-2 border-blue-500 pl-4 pb-6">
          <div class="flex flex-col sm:flex-row justify-between items-start gap-2 mb-4">
            <div>
              <h4 class="text-xl font-medium text-apple-gray-500">{exp.title}</h4>
              <p class="text-apple-gray-400">{exp.company}</p>
            </div>
            <span class="text-sm text-apple-gray-300 bg-apple-gray-100 px-3 py-1 rounded-full whitespace-nowrap">
              {exp.period}
            </span>
          </div>
          <ul class="list-disc list-inside text-apple-gray-400 mb-3 space-y-1">
            {exp.description.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
          <div class="flex flex-wrap gap-2">
            {exp.technologies.map((tech) => (
              <span class="px-3 py-1 bg-blue-50 text-blue-600 rounded-full text-sm">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>

  <div class="bg-white/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
    <h3 class="text-2xl font-semibold mb-6">Education</h3>
    <div class="space-y-6">
      {education.map((edu) => (
        <div class="border-l-2 border-blue-500 pl-4 pb-6">
          <div class="flex flex-col sm:flex-row justify-between items-start gap-2 mb-4">
            <div>
              <h4 class="text-xl font-medium text-apple-gray-500">{edu.degree}</h4>
              <p class="text-apple-gray-400">{edu.school}</p>
            </div>
            <span class="text-sm text-apple-gray-300 bg-apple-gray-100 px-3 py-1 rounded-full whitespace-nowrap">
              {edu.period}
            </span>
          </div>
          <ul class="list-disc list-inside text-apple-gray-400 space-y-1">
            {edu.achievements.map((achievement) => (
              <li>{achievement}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</div>
